<Window x:Class="Laba1OOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paint" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen" WindowState="Normal">
    <Grid Background="LightGray" Name="MyGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Canvas Name="MyCanvas" Background="White" Margin="50,10,50,22" Grid.Row="1" MouseDown="MyCanvas_MouseDown"></Canvas>
        <ToggleButton Content="Ellipse" x:Name="EllipseButton" Margin="50,10,0,0" HorizontalAlignment="Left" Width="65" Height="60" VerticalAlignment="Top" Checked="HandleChecked" Unchecked="HandleChecked"></ToggleButton>
        <ToggleButton Content="Square" x:Name="Square" Margin="120,10,0,0" HorizontalAlignment="Left" Width="65" Height="60" VerticalAlignment="Top" Checked="HandleChecked" Unchecked="HandleChecked"></ToggleButton>
        <ToggleButton Content="Line" x:Name="Line" Margin="190,10,0,0" HorizontalAlignment="Left" Width="65" Height="60" VerticalAlignment="Top" Checked="HandleChecked" Unchecked="HandleChecked"></ToggleButton>
    </Grid>
</Window>